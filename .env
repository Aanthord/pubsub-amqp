# Server Configuration
PORT=8080

# AWS Configuration
AWS_REGION=us-west-2
AWS_S3_BUCKET=my-pubsub-amqp-bucket

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redshift Configuration
REDSHIFT_CONN_STRING=user=your_username dbname=your_database host=your_host port=5439 sslmode=require

# File Storage Configuration
FILE_STORAGE_PATH=/path/to/file/storage

# AMQP Configuration
AMQP_URL=amqp://guest:guest@localhost:5672/

# S3 Offload Configuration
S3_OFFLOAD_LIMIT=-1

# Jaeger Configuration (for tracing)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Log Level (debug, info, warn, error, dpanic, panic, fatal)
LOG_LEVEL=info

# Metrics Configuration
METRICS_PORT=9090

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=300
